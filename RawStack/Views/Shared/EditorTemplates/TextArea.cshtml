@{
    var propertyName = ViewData.ModelMetadata.PropertyName.ToCamelCase();
    var modelName = (string)ViewData["Model"] ?? "model";
    var displayName = ViewData.ModelMetadata.GetDisplayName();
    var isRequired = ViewData.ModelMetadata.IsRequired;
    var isReadOnly = ViewData.ModelMetadata.IsReadOnly;
    var rows = (int?)ViewData["Rows"] ?? 2;
}

<div class="form-group"
     ng-form="form">
    <label for="@propertyName"
           class="col-sm-2 control-label">@displayName</label>
        <div class="col-sm-10">
            <textarea class="form-control"
                      id="@propertyName"
                      name="input"
                      placeholder="@displayName"
                      rows="@rows"
                      ng-model="@modelName.@propertyName"
                      @if (isRequired) { <text> ng-required="true" </text>     }></textarea>
        </div>
    </div>
